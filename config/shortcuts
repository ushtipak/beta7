#!/bin/bash

set -e

xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Alt><Super>bracketright" -t string -s "xflock4"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Alt><Super>t" -t string -s "thunar"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Alt>F1" -t string -s "xfce4-popup-whiskermenu"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Alt>F2" -t string -s "xfce4-appfinder --collapsed"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt><Super>Down" -t string -s "amixer -q sset Master 3%-"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt><Super>s" -t string -s "subl -n"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt><Super>space" -t string -s "amixer -q sset Master toggle"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt><Super>Up" -t string -s "amixer -q sset Master 3%+"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt>c" -t string -s "/usr/bin/google-chrome"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt>f" -t string -s "firefox"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt>m" -t string -s "mousepad"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt>s" -t string -s "subl"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/commands/custom/<Primary><Alt>t" -t string -s "xfce4-terminal"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt><Shift>Tab" -t string -s "cycle_reverse_windows_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt><Super>space" -t string -s "resize_window_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt>F11" -t string -s "fullscreen_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt>F4" -t string -s "close_window_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt>F5" -t string -s "maximize_window_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt>space" -t string -s "popup_menu_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Alt>Tab" -t string -s "cycle_windows_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Control><Alt>d" -t string -s "show_desktop_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Control><Shift><Alt>Left" -t string -s "move_window_left_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Control><Shift><Alt>Right" -t string -s "move_window_right_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Control><Shift><Alt>Up" -t string -s "move_window_up_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Alt>Down" -t string -s "down_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Alt>Left" -t string -s "left_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Alt>Right" -t string -s "right_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Alt>Up" -t string -s "up_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Shift><Alt>Down" -t string -s "move_window_down_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Shift><Alt>Left" -t string -s "move_window_left_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Shift><Alt>Right" -t string -s "move_window_right_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Primary><Shift><Alt>Up" -t string -s "move_window_up_workspace_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F1" -t string -s "workspace_1_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F2" -t string -s "workspace_2_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F3" -t string -s "workspace_4_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F4" -t string -s "workspace_5_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F5" -t string -s "workspace_3_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>F6" -t string -s "workspace_6_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/<Super>Tab" -t string -s "switch_window_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/Down" -t string -s "down_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/Escape" -t string -s "cancel_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/Left" -t string -s "left_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/override" -t string -s "true"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/Right" -t string -s "right_key"
xfconf-query -c xfce4-keyboard-shortcuts -n -p "/xfwm4/custom/Up" -t string -s "up_key"

